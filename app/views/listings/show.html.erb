<div class="container">
  <h1><%=@listing.name%></h1>
  <div class="d-flex">
    <div>
      <% if @listing.available %>
        <h3>
          <style class="badge p-3 my-2 badge-success">
            Available!
          </style>
        </h3>
        <% else %>
          <h3>
            <style class="badge p-3 my-2 badge-warning" width="200px">
              Not available.
            </style>
          </h3>
          <% end %>
    </div>
  </div>

  <div class="d-flex align-items-center">
    <img src=<%=@listing.photo%> width="400px">
    <div class="ml-3">
      <div>
        <p><strong>Listing Description:</strong> <%= @listing.description %></p>
      </div>
      <p><strong>Price:</strong> <%= number_to_currency(@listing.price) %> / day
      </p>
      <p><strong>Owner:</strong> <%= @listing.user.username %>
      </p>
      <p><strong>Category:</strong> <%= @listing.category %>
      </p>
      <p><strong>Pick-Up Address:</strong> <%= @listing.user.address %>
      </p>
    </div>
  </div>

  <h3 class="mt-5">I need this equipement...</h3>
  <div class="col-8">
    <%= simple_form_for [ @listing, @rental ] do |f| %>
      <%= f.input :from %>
        <%= f.input :until %>
          <%= f.hidden_field :status, value: "pending" %>
            <%= f.submit "Send my request" %>
              <% end %>
  </div>
  </div>
</div>
