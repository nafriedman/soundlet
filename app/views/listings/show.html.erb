<h1>Listings Show Page</h1>

<div class="d-flex">
  <div>
    <% if @listing.available %>
      <h3><style class="badge p-3 my-2 badge-success">Available!</style></h3>
    <% else %>
      <h3><style class="badge p-3 my-2 badge-warning" width="200px">Not available right now</style></h3> 
    <% end %>
  </div>
</div>

<div class="d-flex align-items-center">
  <img src=<%=@listing.photo%> width="400px">
  <div class="ml-3">
    <div>
      <h2><%= @listing.name %></h2>
      <p><%= @listing.description %></p>
    </div>
    <p>Price: <%= number_to_currency(@listing.price) %></p>
    <p>Owner's name: <%= @listing.user.username %></p>
    <p>Category: <%= @listing.category %></p>
  </div>
</div>

<h3 class="mt-5">I need this equipement..</h3>
  <div class="col-8">
    <%= simple_form_for [ @listing, @rental ] do |f| %>
      <%= f.input :from %>
      <%= f.input :until %>
      <%= f.hidden_field :status, value: "pending" %>
      <%= f.submit "Send my request" %>
    <% end %>
  </div>
</div>
