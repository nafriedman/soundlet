<div class="container search-form-control form-group pt-3">
  <form method='get' action="/listings">
    <%= text_field_tag :query, params[:query], class: "form-control" , placeholder: "Find a Gear to Rent" %>
    <%= submit_tag "Search" , class: "btn btn-flat mr-3 pt-4"%>
  </form>
</div>

  <h1 class="margin-top">Gear to Rent</h1>
  <div class="cards">
    <% @listings.each_with_index do |listing, index| %>
      <%= link_to listing_path(listing) do %>
        <div class="card-listing">
          <img src=<%=listing.photo%>>
          <div class="card-listing-infos">
            <div>
              <h2>
                <%= listing.name %>
              </h2>
              <p>
                <%= listing.description %>
              </p>
            </div>
            <h2 class="card-listing-pricing">
              <%= number_to_currency(listing.price) %> / day
            </h2>
            <img src="https://i.pravatar.cc/150?img=<%= index + 1 %>" class="card-listing-user avatar-bordered" />
          </div>
        </div>
        <% end %>
      <% end %>
  </div>
